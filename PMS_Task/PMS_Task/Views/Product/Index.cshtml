﻿
@{
    ViewBag.Title = "Index";
}



@if (TempData["Msg"] != null)
{
    <p class="alert alert-success">@TempData["Msg"]</p>
}
<a href="/Product/Create">Create</a>
@if (Model.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Category</td>
            <td></td>
        </tr>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Price</td>
                <td>@s.Qty</td>
                <td>@s.Cid</td>
                <td>
                    <div class="d-flex">
                        <a href="/Product/Edit/@s.Id" class="btn btn-success">Edit</a>
                        <!-- Delete button inside a form for POST method -->
                        @using (Html.BeginForm("Delete", "Product", new { id = s.Id }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        }
                    </div>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No Data</h3>
}